extends ../../layouts/master
block content
  .row#login
    .col-sm-6.col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3 New Item
        .panel-body
          form(action='/items', method='post')
            fieldset
              .row
                .col-sm-12.col-md-10.col-md-offset-1
                  .form-group
                    .input-group
                      label Title
                      input.form-control(typ='text' name='title' autofocus='')
                  .form-group
                    .input-group
                      label Due Date
                      input.form-control(type='date' name='due' required)
                  .form-group
                    .input-group
                      label Tags
                      input.form-control(type='text' name='tags' required)
                  .form-group
                    .input-group
                      label Priority
                      select.form-control(name='priority' required)
                        option(value='') Select Priority
                        option Low
                        option Medium
                        option High
                  .form-group
                    input.btn.btn-lg.btn-primary.btn-block(type='submit' value='Create')
